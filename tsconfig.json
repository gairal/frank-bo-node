{
  "compilerOptions": {
    "forceConsistentCasingInFileNames": true,
    "lib": ["es2021"],
    "module": "commonjs",
    "outDir": "./dist",
    "skipLibCheck": true,
    "strict": true,
    "target": "es2021"
  },
  "exclude": [
    "./__mocks__",
    "./dist/**/*",
    "./node_modules",
    "./src/**/__tests__"
  ],
  "include": ["src/**/*.ts"]
}
