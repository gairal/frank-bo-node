{
  "compilerOptions": {
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "lib": ["ES2023"],
    "module": "commonjs",
    "outDir": "./dist",
    "skipLibCheck": true,
    "strict": true,
    "target": "ES2022"
  },
  "exclude": [
    "./__mocks__",
    "./dist/**/*",
    "./node_modules",
    "./src/**/__tests__"
  ],
  "include": ["src/**/*.ts"]
}
